%html
  %head
    %title= yield(:title) or t(:'shared.app_name')
    = csrf_meta_tag
    %meta{:charset => 'utf-8'}
    = stylesheet_link_tag 'admin'
    = stylesheet_link_tag 'jquery-ui'
    = stylesheet_link_tag 'jquery-ui-timepicker-addon'
